{
  "name": "wp-react-thumbnail-gallery",
  "version": "1.0.10",
  "description": "A responsive image gallery featuring (1) a pane showing the full image, and (2) a pane with image thumbnails, titles, and descriptions. Also includes an optional filter for the WordPress [gallery] shortcode.",
  "main": "src/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johnwatkins0/wp-react-thumbnail-gallery.git"
  },
  "scripts": {
    "build": "webpack -p && webpack -p --env.wordpress && webpack -p --env.dataAttributes",
    "build-dev": "webpack && webpack --env.wordpress && webpack --env.dataAttributes",
    "build-all": "npm run build && npm run build-dev"
  },
  "keywords": [
    "wordpress",
    "react"
  ],
  "author": "John Watkins",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/johnwatkins0/wp-react-thumbnail-gallery/issues"
  },
  "homepage": "https://github.com/johnwatkins0/wp-react-thumbnail-gallery#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-webpack": "^1.0.0",
    "bootstrap": "git://github.com/twbs/bootstrap.git#v4-dev",
    "css-loader": "^0.28.4",
    "eslint-config-johnwatkins0": "git+https://github.com/johnwatkins0/eslint-config-johnwatkins0.git",
    "extract-text-webpack-plugin": "^3.0.0",
    "node-autodeploy-wp": "^1.0.20",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "webpack": "^3.4.1",
    "webpack-bundle-analyzer": "^2.9.0"
  },
  "eslintConfig": {
    "extends": [
      "johnwatkins0"
    ]
  },
  "eslintIgnore": [
    "dist/*.js"
  ],
  "dependencies": {
    "preact": "^8.2.5",
    "preact-compat": "^3.17.0",
    "prop-types": "^15.5.10"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ]
  }
}
